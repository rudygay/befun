<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/whiteback"
    android:orientation="vertical">
        
    <RelativeLayout
        android:id="@+id/mine_bar_layout"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:background="@drawable/title_bar">
		<LinearLayout android:layout_height="fill_parent"
		    android:layout_width="60dp"
		    android:layout_alignParentRight="true"
		    android:gravity="center"
		    android:clickable="true"
		    android:onClick="blue_connect">
		    <ImageView
            android:id="@+id/renewimg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"           
            android:src="@drawable/btn_renew"        
            />
		    <ProgressBar 
		    android:id="@+id/renewPro"		    
		    android:indeterminate="false"
        	android:indeterminateDrawable="@drawable/renewing"
        	android:indeterminateDuration="1100"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            />		    
		</LinearLayout>
		
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="我的"
            android:textColor="#ffffff"
            android:textSize="20sp" />
    </RelativeLayout>

	<RelativeLayout android:layout_height="fill_parent"
		android:layout_width="fill_parent"
		android:layout_below="@id/mine_bar_layout"
		android:background="#ff251919"
		android:id="@+id/mine_pager">
    <LinearLayout
    	android:layout_width="fill_parent"
   		android:layout_height="230dp"
    	android:gravity="center_vertical"
    	android:id="@+id/mine_frame">       	
        	<LinearLayout
            	android:layout_width="wrap_content"
            	android:layout_height="wrap_content"
              	android:gravity="center_horizontal"
              	android:orientation="vertical"
              	android:layout_weight="1">               	
                <Button
            		android:id="@+id/gaosu"
        			android:layout_width="wrap_content"
        			android:layout_height="wrap_content"        	     	
        			android:scaleType="matrix"
        			android:background="@drawable/btn_gaosu"
        			android:onClick="gaochao"/>
                <TextView
            		android:layout_width="wrap_content"
            		android:layout_height="wrap_content"
            		android:text="模式0"
            		android:textColor="#fff"
            		android:textSize="12sp"/>                
        	 </LinearLayout>
        	 <LinearLayout
            	android:layout_width="wrap_content"
            	android:layout_height="wrap_content"
              	android:gravity="center_horizontal"
              	android:orientation="vertical"
              	android:layout_weight="1">               	
                <Button
            		android:id="@+id/jingzhi"
        			android:layout_width="wrap_content"
        			android:layout_height="wrap_content"        	     	
        			android:scaleType="matrix"
        			android:background="@drawable/btn_jingzhi"
        			android:onClick="jingzhi"/>
                <TextView
            		android:layout_width="wrap_content"
            		android:layout_height="wrap_content"
            		android:text="静止"
            		android:textColor="#fff"
            		android:textSize="12sp"
            		/>                
        	 </LinearLayout>
        	 
        	 <LinearLayout
            	android:layout_width="wrap_content"
            	android:layout_height="wrap_content"
              	android:gravity="center_horizontal"
              	android:orientation="vertical"
              	android:layout_weight="1">               	
                <Button
            		android:id="@+id/kaigeer"
        			android:layout_width="wrap_content"
        			android:layout_height="wrap_content"        	     	
        			android:scaleType="matrix"
        			android:background="@drawable/btn_kaigeer"
        			android:onClick="kaigeer"/>
                <TextView
            		android:layout_width="wrap_content"
            		android:layout_height="wrap_content"
            		android:text="模式2"
            		android:textColor="#fff"
            		android:textSize="12sp"
            		/>                
        	 </LinearLayout>
        	
        </LinearLayout> 

 			<ImageView android:layout_height="wrap_content"
		        android:layout_width="match_parent"
		        android:src="@drawable/mine_divider"
		        android:layout_below="@id/mine_frame"
		        android:id="@+id/mine_divider0"/>
 			<TextView android:layout_height="wrap_content"
 			    android:layout_width="wrap_content"
 			    android:layout_below="@id/mine_divider0"
 			    android:text="心跳模式"
 			    android:textColor="#eee"
 			    android:textSize="14sp"
 			    android:layout_centerInParent="true"
 			    android:paddingTop="15dp"
 			    android:id="@+id/moshitxt"/>
 			<LinearLayout 
    			android:layout_width="match_parent"
    			android:layout_height="wrap_content"
    			android:gravity="center_vertical"
    			android:layout_below="@id/moshitxt"
    			android:id="@+id/moshi_lay"
    			android:paddingTop="15dp">       	
    <LinearLayout
    	android:layout_width="wrap_content"
   	 	android:layout_height="wrap_content"
    	android:gravity="center_horizontal"
    	android:orientation="vertical"
    	android:layout_weight="1">               	
                <Button
            		android:id="@+id/h1"
        			android:layout_width="wrap_content"
        			android:layout_height="wrap_content"        	     	
        			android:scaleType="matrix"
        			android:background="@drawable/h1" />                
        	 </LinearLayout>
        	 <LinearLayout
            	android:layout_width="wrap_content"
            	android:layout_height="wrap_content"
              	android:gravity="center_horizontal"
              	android:orientation="vertical"
              	android:layout_weight="1">               	
                <Button
            		android:id="@+id/h2"
        			android:layout_width="wrap_content"
        			android:layout_height="wrap_content"        	     	
        			android:scaleType="matrix"
        			android:background="@drawable/h2"/>                             
        	 </LinearLayout>
        	 <LinearLayout
            	android:layout_width="wrap_content"
            	android:layout_height="wrap_content"
              	android:gravity="center_horizontal"
              	android:orientation="vertical"
              	android:layout_weight="1">               	
                <Button
            		android:id="@+id/h3"
        			android:layout_width="wrap_content"
        			android:layout_height="wrap_content"        	     	
        			android:scaleType="matrix"
        			android:background="@drawable/h3" />                               
        	 </LinearLayout>
        	 <LinearLayout
            	android:layout_width="wrap_content"
            	android:layout_height="wrap_content"
              	android:gravity="center_horizontal"
              	android:orientation="vertical"
              	android:layout_weight="1">               	
                <Button
            		android:id="@+id/h4"
        			android:layout_width="wrap_content"
        			android:layout_height="wrap_content"        	     	
        			android:scaleType="matrix"
        			android:background="@drawable/h4" />                               
        	 </LinearLayout>
        	 <LinearLayout
            	android:layout_width="wrap_content"
            	android:layout_height="wrap_content"
              	android:gravity="center_horizontal"
              	android:orientation="vertical"
              	android:layout_weight="1">               	
                <Button
            		android:id="@+id/h5"
        			android:layout_width="wrap_content"
        			android:layout_height="wrap_content"        	     	
        			android:scaleType="matrix"
        			android:background="@drawable/h5"/>                               
        	 </LinearLayout>
        	
        </LinearLayout> 
        <ImageView android:layout_height="wrap_content"
		        android:layout_width="match_parent"
		        android:src="@drawable/mine_divider"
		        android:layout_below="@id/moshi_lay"
		        android:id="@+id/mine_divider1"
		        android:paddingTop="22dp"/>
        <TextView android:layout_height="wrap_content"
 			    android:layout_width="wrap_content"
 			    android:layout_below="@id/mine_divider1"
 			    android:text="速度模式"
 			    android:textColor="#eee"
 			    android:textSize="14sp"
 			    android:layout_centerInParent="true"
 			    android:paddingTop="15dp"
 			    android:id="@+id/sudutxt"/>
 		<RelativeLayout android:layout_width="match_parent"
 		    android:layout_height="wrap_content"
 		    android:layout_below="@id/sudutxt"
 		    android:paddingLeft="10dp"
 		    android:paddingRight="10dp"
 		    android:paddingTop="30dp"
 		    android:gravity="center_vertical">
        	 <TextView android:layout_width="wrap_content"
        	     android:layout_height="wrap_content"
        	     android:text="L"
        	     android:id="@+id/l"/>
        	 <TextView android:layout_width="wrap_content"
        	     android:layout_height="wrap_content"
        	     android:text="H"
        	     android:id="@+id/h"
        	     android:layout_alignParentRight="true"/>
        	 <SeekBar android:layout_width="match_parent"
        	     android:layout_height="wrap_content"
        	     android:layout_toLeftOf="@id/h"
        	     android:layout_toRightOf="@id/l"
        	     android:thumb="@drawable/seek_btn"
        	     android:progressDrawable="@drawable/seekbarbackground"
        	     android:progress="50"
        	     android:paddingLeft="7dp"
        	     android:paddingRight="7dp"
        	     android:maxHeight="10dp"
    			 android:minHeight="10dp"
    			 android:id="@+id/speedProgress"/>   
 		</RelativeLayout>			    
		</RelativeLayout>		
</RelativeLayout>